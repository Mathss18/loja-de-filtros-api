{
  "name": "loja-de-filtros-api",
  "module": "index.ts",
  "type": "commonjs",
  "scripts": {
    "start": "tsx src/index.ts",
    "start:dev": "tsx watch src/index.ts",
    "start:prod": "npm run build && pm2-runtime dist/index.js",
    "build": "tsup && npm run copy-mail-templates",
    "copy-mail-templates": "mkdir -p dist/mail/templates && cp -r src/mail/templates/* dist/mail/templates/"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/node": "^20.8.2",
    "@types/nodemailer": "^6.4.11",
    "tsup": "^7.2.0",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.423.0",
    "aws-sdk": "^2.1470.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "nodemailer": "^6.9.6"
  }
}
